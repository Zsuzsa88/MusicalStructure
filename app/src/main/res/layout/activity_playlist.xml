<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_playlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    tools:context="com.example.zsuzsi.musicalstructure.Playlist">


    <SearchView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:iconifiedByDefault="false"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="5dp"
        android:background="#CFD8DC"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:text="Ezen a felületen a user a saját playlistjét találja meg amit a saját ízlése alapján állított össze. Ezt megteheti albummok, zenék, artistok vagy zenei stílusok alapján. Ezeket bármikor kiegészítheti vagy kreálhat újat." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="10dp"
        android:text="Playlist 1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:id="@+id/textView" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/music_muki"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/muki" />


            <ImageButton
                android:id="@+id/music_keith"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/keith" />

            <ImageButton
                android:id="@+id/music_mess"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mess" />

            <ImageButton
                android:id="@+id/music_never"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/never" />


            <ImageButton
                android:id="@+id/music_john"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/john" />

            <ImageButton
                android:id="@+id/music_nora"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nora" />


        </LinearLayout>

    </HorizontalScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="50dp"
        android:popupTheme="@style/Base.TextAppearance.AppCompat.Widget.Button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:src="@mipmap/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageView
                android:src="@mipmap/backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageView
                android:src="@mipmap/forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>



            <ImageView
                android:src="@mipmap/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:text="Create New"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:text="Add to Playlist"/>

</RelativeLayout>
